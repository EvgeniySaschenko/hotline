										+e.LABEL(for="radio-btn-sex_yes").radio-btn Муж

										+e.INPUT(id="radio-btn-sex_no" name="sex" type="radio" value="0").radio
										+e.LABEL(for="radio-btn-sex_no").radio-btn Жен

									+e.col-1
										+e.name Семейное положение

										+e.SELECT(name="family-status").select_max-width
											+e.OPTION(value="1").option Женат/замужем
											+e.OPTION(value="2").option Не женат/не замужем
											+e.OPTION(value="3").option В разводе

								+e.row
									+e.col-3
										+e.name Гражданство
										+e.SELECT(name="nationality").select_regular
											+e.OPTION(value="1").option Украина
											+e.OPTION(value="2").option Другая страна
											+e.OPTION(value="3").option Двойное

									+e.col-3
										+e.name Дата рождения
										+e.SELECT(name="birth-day").select
											+e.OPTION(value="1").option 1
											+e.OPTION(value="2").option 2
											+e.OPTION(value="3").option 3

										+e.SELECT(name="birth-month").select
											+e.OPTION(value="1").option 1
											+e.OPTION(value="2").option 2
											+e.OPTION(value="3").option 3

										+e.SELECT(name="birth-year").select
											+e.OPTION(value="1990").option 1990
											+e.OPTION(value="2000").option 2000
											+e.OPTION(value="2010").option 2010

								+e.row
									+e.col-1
										+e.LABEL(for="field-place-birth").name Место рождения
