mixin b-header()
	+b.HEADER.header
		.container
			+e.row
				+e.col_1

				+e.col_2
					+b.BUTTON.btn_burger-header(id="btn_burger-header" data-id-control="nav__header")
						+e.item
					+b.NAV.nav(class="_header" id="nav__header")
						+e.UL.list#nav-list_header
							+e.LI.list-item_1
								+e.A.list-link(href="#") Личный кабинет
							+e.LI.list-item_2
								+e.A.list-link(href="#") Раздел 1
							+e.LI.list-item_3
								+e.A.list-link(href="#") Раздел 2
							+e.LI.list-item_4
								+e.A.list-link(href="#") Раздел 3
							+e.LI.list-item_5
								+e.A.list-link(href="#") Раздел 4
							+e.LI.list-item_6
								+e.A.list-link(href="#") Раздел 5